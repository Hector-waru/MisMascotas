<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="280dp"
        android:layout_height="281dp"
        android:scaleType="centerCrop"
        android:src="@drawable/huella_fondo"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="286dp"
        android:layout_height="129dp"
        android:fontFamily="@font/telex_regular"
        android:gravity="center"
        android:text="@string/inicio_home"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="140dp"
        android:layout_height="88dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/botoncustom"
        android:fontFamily="@font/telex_regular"
        android:gravity="center"
        android:text="@string/boton_p"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="140dp"
        android:layout_height="88dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/botoncustom"
        android:fontFamily="@font/telex_regular"
        android:gravity="center"
        android:text="@string/boton_g"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="onClickc"/>


</androidx.constraintlayout.widget.ConstraintLayout>
